<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="crgt" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
	<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
	<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
	<property name="username" value="system"/>
	<property name="password" value="manager"/>	
	</bean>
	
	<bean id="dao" class="com.nt.dao.StudentDAOImpl">
	<constructor-arg ref="crgt"/>	
	</bean>
	
	<bean id="service" class="com.nt.service.StudentServiceImpl">
		<constructor-arg ref="dao"/>
	</bean>
	
	<bean id="controller" class="com.nt.controller.MainController">
		<constructor-arg ref="service"/>
	
	</bean>
</beans>
